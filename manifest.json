{
    "manifest_version": 3,
    "name": "KLMS Tools",
    "version": "1.0.0",
    "action": { "default_popup": "index.html" },
    "content_scripts": [
        {
            "js": ["src/content.ts"],
            "matches": ["https://lms.keio.jp/"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
          "resources": ["src/inject.js"],
          "matches": ["https://lms.keio.jp/*"]
        }
    ],
    "permissions": [
        "storage"
    ]
}